rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /posts/{postId} {
      // TODO: Restore proper auth check after implementing Firebase Custom Tokens for Kakao
      allow read: if true;

      allow create: if request.auth != null && request.resource.data.authorId == request.auth.uid;

      allow update: if request.auth != null &&
                    resource.data.authorId == request.auth.uid &&
                    !request.resource.data.diff(resource.data).affectedKeys().hasAny(['status', 'releaseTime', 'dailyKey', 'authorId', 'version']);
    }

    match /daily_locks/{lockId} {
      allow read, write: if false;
    }

    match /users/{userId} {
      allow read, create, update: if true;
    }
  }
}
