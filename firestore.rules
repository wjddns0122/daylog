rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /posts/{postId} {
      function isValidVisibility(value) {
        return value == 'PRIVATE' || value == 'PUBLIC';
      }

      function isOwner() {
        return request.auth != null && resource.data.authorId == request.auth.uid;
      }

      function isPublicReleased() {
        return resource.data.status == 'RELEASED' && resource.data.visibility == 'PUBLIC';
      }

      allow read: if isPublicReleased() || isOwner();

      allow create: if request.auth != null &&
                    request.resource.data.authorId == request.auth.uid &&
                    isValidVisibility(request.resource.data.visibility);

      // Author can update their own post (except protected fields)
      allow update: if request.auth != null &&
                    resource.data.authorId == request.auth.uid &&
                    isValidVisibility(request.resource.data.visibility) &&
                    !request.resource.data.diff(resource.data).affectedKeys().hasAny(['status', 'releaseTime', 'dailyKey', 'authorId', 'version']);

      // Any authenticated user can toggle likes (only likedBy field)
      allow update: if request.auth != null &&
                    request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likedBy']);

      // Author can delete their own post
      allow delete: if request.auth != null &&
                    resource.data.authorId == request.auth.uid;
    }

    match /daily_locks/{lockId} {
      allow read, write: if false;
    }

    match /users/{userId} {
      allow read, create, update: if true;
    }

    match /notifications/{notificationId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
