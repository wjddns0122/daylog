rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /posts/{postId} {
      function isValidVisibility(value) {
        return value == 'PRIVATE' || value == 'PUBLIC';
      }

      function isOwner() {
        return request.auth != null && resource.data.authorId == request.auth.uid;
      }

      function isPublicReleased() {
        return resource.data.status == 'RELEASED' && resource.data.visibility == 'PUBLIC';
      }

      // Allow read if:
      // 1. The post is PUBLIC and RELEASED (anyone can see)
      // 2. The requester is authenticated (queries already filter by authorId or status)
      allow read: if request.auth != null;

      allow create: if request.auth != null &&
                    request.resource.data.authorId == request.auth.uid &&
                    isValidVisibility(request.resource.data.visibility);

      // Author can update their own post (except protected fields)
      allow update: if request.auth != null &&
                    resource.data.authorId == request.auth.uid &&
                    isValidVisibility(request.resource.data.visibility) &&
                    !request.resource.data.diff(resource.data).affectedKeys().hasAny(['status', 'releaseTime', 'dailyKey', 'authorId', 'version']);

      // Any authenticated user can toggle likes or update commentCount
      allow update: if request.auth != null &&
                    request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likedBy', 'commentCount']);

      // Author can delete their own post
      allow delete: if request.auth != null &&
                    resource.data.authorId == request.auth.uid;

      // Comments subcollection
      match /comments/{commentId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null &&
                      request.resource.data.userId == request.auth.uid;
        allow delete: if request.auth != null &&
                      resource.data.userId == request.auth.uid;
      }
    }

    match /daily_locks/{lockId} {
      allow read, write: if false;
    }

    match /users/{userId} {
      allow read: if true;
      allow create, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    match /follow_requests/{requestId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    match /follows/{followId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    match /notifications/{notificationId} {
      allow read: if request.auth != null;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
